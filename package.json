{
  "name": "wblinds",
  "version": "1.0.0",
  "main": "web/index.ts",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/maxakuru/WBlinds"
  },
  "scripts": {
    "prepare": "husky install",
    "build:dev": "cross-env NODE_ENV=dev rollup -w -c rollup.config.ts",
    "build": "yarn build:ui && yarn build:uih",
    "build:ui": "rollup -c rollup.config.ts",
    "build:uih": "cross-env TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\", \"lib\": [\"ES2020\"] }' ts-node ./scripts/build.uih.ts",
    "build:cpp": "PATH=$PATH:~/.platformio/penv/bin pio run",
    "flash": "PATH=$PATH:~/.platformio/penv/bin pio run --target upload",
    "pull:homekit": "cross-env TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\", \"lib\": [\"ES2020\"] }' ts-node ./scripts/pull.homekit.ts"
  },
  "resolutions": {
    "@ampproject/rollup-plugin-closure-compiler/acorn": "8.3.0",
    "@ampproject/rollup-plugin-closure-compiler/acorn-walk": "8.1.0"
  },
  "dependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "0.26.0",
    "@rollup/plugin-html": "^0.2.3",
    "@rollup/plugin-typescript": "^8.2.1",
    "clean-css": "^4.2.3",
    "cross-env": "^7.0.3",
    "dotenv-flow": "^3.2.0",
    "html-minifier-terser": "^5.1.1",
    "inliner": "^1.13.1",
    "nodemon": "^2.0.7",
    "rollup": "^2.50.6",
    "rollup-plugin-html": "^0.2.1",
    "typescript": "^4.3.2",
    "zlib": "^1.0.5"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@types/child-process-promise": "^2.2.1",
    "@types/fetch-mock": "^7.3.3",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "autoprefixer": "^10.2.6",
    "child-process-promise": "^2.2.1",
    "cssnano-preset-default": "^5.1.2",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "fetch-mock": "^9.11.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "postcss": "^8.3.0",
    "postcss-import": "^14.0.2",
    "postcss-nested": "^5.0.5",
    "postcss-uncss": "^0.17.0",
    "prettier": "^2.3.1",
    "rollup-plugin-embed-css": "^1.0.21",
    "rollup-plugin-gzip": "^2.5.0",
    "rollup-plugin-postcss": "^4.0.0",
    "ts-node": "^10.0.0",
    "uncss": "^0.17.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  }
}

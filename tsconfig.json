{
    "compilerOptions": {
        "module": "ES6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "ES2015",
            "DOM",
            "ES2019"
        ],
        "target": "ES2019",
        "moduleResolution": "node",
        "baseUrl": "./web/src",
        "paths": {
            "@Util": [
                "util"
            ],
            "@Screens": [
                "screens"
            ],
            "@Components": [
                "components"
            ],
            "@State": [
                "state"
            ],
            "@Api": [
                "api"
            ],
            "@Const": [
                "const"
            ],
            "@Assets": [
                "assets"
            ]
        }
    },
    "include": [
        "web/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}
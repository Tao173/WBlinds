{
    "compilerOptions": {
        "module": "ESNEXT",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": false,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "DOM",
            "ESNEXT"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "target": "ESNEXT",
        "moduleResolution": "Node",
        "baseUrl": "./web/src",
        "paths": {
            "@Util": [
                "util"
            ],
            "@Screens": [
                "screens"
            ],
            "@Components": [
                "components"
            ],
            "@State": [
                "state"
            ],
            "@Api": [
                "api"
            ],
            "@Const": [
                "const"
            ],
            "@Assets": [
                "assets"
            ]
        }
    },
    "include": [
        "web/**/*",
        "tools/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}